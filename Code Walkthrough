###Neural Network
modnnet<-train(classe ~ ., method = "nnet", data = trainset3, trControl = control)
print(modnnet)

predictnnet<-predict(modnnet, validationsetpc)
accuracynnet<-confusionMatrix(validationsetpc$classe, predictnnet)
accuracynnet
